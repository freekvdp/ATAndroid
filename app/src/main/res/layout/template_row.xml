<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/template_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:id="@+id/template_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323A45"
        android:paddingBottom="5px"
        android:paddingTop="10px"
        android:text="Template"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Beschrijving"
        android:textColor="@color/TextHighlightDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/template_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textColor="@color/TextHighlightDark"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/Actors_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Personen"
        android:textColor="@color/TextHighlightDark"
        android:textSize="18sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_members"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="horizontal" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/template_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/deniedRed"
            android:text="Delete"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/template_edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/knopMintgroen"
            android:text="Edit"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>